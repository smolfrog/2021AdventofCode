import java.util.ArrayList;
public class threeOnePtTwo {
    //build a method called getDigit
    //method should return a specific digit, which is the digitIndex
    //currentPower is the entire multi-digit number that is being looked at
    static String getDigit(String currentPower, int digitIndex) {
        String digit = "" + currentPower.charAt(digitIndex);
        return digit;
    }
    public static void main(String[] args) {
        //ok for part two turning my array of strings into an array list lololol
        ArrayList<String> currentPowerList = new ArrayList<String>(Arrays.asList(powerList));
        //create an array of STRINGS - tried it as an array of INTS and it led to STRUGGLES
        String[] powerArray = {"00100", "11110", "10110", "10111", "10101", "01111", "00111", "11100", "10000", "11001", "00010", "01010"};

        //two dimensional array with 5 arrays in it of length 2
        //this is so i don't have to set countzero=0 and countone=0 and then run the for loop like 12 times
        int[][] digitCounts = new int[12][2];
        
        //write a for loop to go through the entire array called power
        for (int currentPowerIndex = 0; currentPowerIndex < powerArray.length; currentPowerIndex++) {
            //set currentPowerIndex to 0 = where I am in the powerArray
            //as long as currentPowerIndex is inside the powerArray - stop when reach end
            //run this code, then increase currentPowerIndex by 1 = go to next number in the powerArray
            String currentPower = powerArray[currentPowerIndex];
            //now go through digit by digit;
            for (int digitIndex = 0; digitIndex < currentPower.length(); digitIndex++) {
            
                if (getDigit(currentPower, digitIndex ).equals("0")) {
                    digitCounts[digitIndex][0]++;
                }
                if (getDigit(currentPower, digitIndex).equals("1")) {
                    digitCounts[digitIndex][1]++;
                }
            }
            System.out.println("Loop iteration " + currentPowerIndex );
        }


        /* an example of a two dimensional array
           [ [5,2],
             [7,3],
             [4,2],
             [9,10]
            ]
        */

     

        String gammaRate = "";
        String epsilonRate = "";

        //in this for loop, take each result of digitCount and turn it into a String
        for (int currentDigitCountIndex = 0; currentDigitCountIndex < digitCounts.length; currentDigitCountIndex++) {
            //now take the result of the array and turn it into a String
            int[] currentDigitCount = digitCounts[currentDigitCountIndex];
            int countzero = currentDigitCount[0];
            int countone = currentDigitCount[1];

            if (countzero > countone) {
                System.out.println("For digit " + currentDigitCountIndex + ": 0 is more");
                gammaRate += "0";
                epsilonRate += "1";
            } else if (countzero < countone) {
                System.out.println("For digit " + currentDigitCountIndex + ": 1 is more");
                gammaRate += "1";
                epsilonRate += "0";
            } else {
                System.out.println("For digit " + currentDigitCountIndex + ": 1 is more(equal)");
                gammaRate = gammaRate + "1";
                epsilonRate += "0";
            }
        }
        //gamma in decimal is 2346
        System.out.println(gammaRate);
        //epsilon in decimal is 1749
        System.out.println(epsilonRate);
        //gamma * epsilon = 4103154
    }
  }
